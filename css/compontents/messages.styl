// Messages

.message
  padding: 10px 15px
  position: relative
  background-color: $blue-lighter
  color: $blue
  line-height: 1.2

  &:after
    border: solid transparent
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border-color: rgba(136, 183, 213, 0)
    border-width: 6px

  &.message-left, &.message-right

    &:after
      top: 50%
      margin-top: -6px

  &.message-left

    &:after
      left: 100%
      border-left-color: $blue-lighter      

    &.message-success
      &:after
        border-left-color: $green-lighter

    &.message-error
      &:after
        border-left-color: $pink-lighter

    &.message-alert
      &:after
        border-left-color: $orange-lighter

  &.message-right

    &:after
      right: 100%
      border-right-color: $blue-lighter      

    &.message-success
      &:after
        border-right-color: $green-lighter

    &.message-error
      &:after
        border-right-color: $pink-lighter

    &.message-alert
      &:after
        border-right-color: $orange-lighter

  &.message-above, &.message-below

    &:after      
      left: 50%
      margin-left: -6px

  &.message-below

    &:after
      border-bottom-color: $blue-lighter
      bottom: 100%

    &.message-error
      &:after
        border-bottom-color: $pink-lighter

    &.message-success
      &:after
        border-bottom-color: $green-lighter

    &.message-alert
      &:after
        border-bottom-color: $orange-lighter

  &.message-above

    &:after
      border-top-color: $blue-lighter
      top: 100%

    &.message-error
      &:after
        border-top-color: $pink-lighter

    &.message-success
      &:after
        border-top-color: $green-lighter

    &.message-alert
      &:after
        border-top-color: $orange-lighter

  a
    font-weight: $font-weight-bold
    color: $blue-saturated

    &:hover
      color: $blue-saturated-darker

  p:last-of-type
    margin: 0

  .ss-icon.ss-delete
    display: block
    position: absolute
    top: 50%
    right: 15px
    margin-top: -7px
    cursor: pointer

  &.message-error
    background-color: $pink-lighter
    color: $red

    a
      color: darken($red, 20%)

      &:hover
        color: darken($red, 40%)

    .ss-delete
      color: $red-light

      &:hover
        color: $red

  &.message-alert
    background-color: $orange-lighter
    color: $orange

    .ss-delete
      color: $orange-light

      &:hover
        color: $orange

    a
      color: darken($orange, 20%)

      &:hover
        color: darken($orange, 40%)

  &.message-success
    background-color: $green-lighter
    color: $green

    .ss-delete
      color: $green-light

      &:hover
        color: $green

    a
      color: darken($green, 20%)

      &:hover
        color: darken($green, 40%)

  &.message-has-icon 
    padding: 10px 35px 10px 15px

  &.message-full-width
    text-align: center

    &.message-has-icon
      padding: 10px 35px

